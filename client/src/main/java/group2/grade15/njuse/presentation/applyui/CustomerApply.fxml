<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-image: url(file:client/src/main/res/login/loginback.jpg); -fx-background-size: contain;"
            xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group2.grade15.njuse.presentation.applyui.CustomerApplyController">
    <right>
        <Pane fx:id="applyPaneBack" opacity="0.7" prefHeight="600.0" prefWidth="700.0"
              style="-fx-background-color: black;" BorderPane.alignment="CENTER">
            <children>
                <GridPane fx:id="applyPane" prefHeight="600.0" prefWidth="700.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="263.0" minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="265.0" minHeight="10.0" prefHeight="130.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="261.0" minHeight="10.0" prefHeight="80.0" valignment="TOP"
                                        vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="用户名" textFill="WHITE" GridPane.rowIndex="1">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label text="密码" textFill="WHITE" GridPane.rowIndex="2">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label text="确认密码" textFill="WHITE" GridPane.rowIndex="3">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label text="联系方式" textFill="WHITE" GridPane.rowIndex="4">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="extraInfoHint" text="生日" textFill="WHITE" GridPane.rowIndex="6">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label onMouseEntered="#mouseEnterCancel" onMouseExited="#mouseExitCancel"
                               onMousePressed="#mousePressCancel" onMouseReleased="#mouseReleaseCancel"
                               GridPane.rowIndex="8"/>
                        <Label onMouseEntered="#mouseEnterConfirm" onMouseExited="#mouseExitConfirm"
                               onMousePressed="#mousePressConfirm" onMouseReleased="#mouseReleaseConfirm"
                               GridPane.columnIndex="2" GridPane.rowIndex="8">
                            <graphic>
                                <ImageView fx:id="confirmIconImage" fitHeight="47.0" fitWidth="47.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="file:client/src/main/res/apply/confirmicon.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Label>
                        <Label text="申请一个新的账号" textFill="WHITE" GridPane.columnIndex="1">
                            <font>
                                <Font size="35.0"/>
                            </font>
                        </Label>
                        <CheckBox fx:id="isEnterpriseCheckBox" mnemonicParsing="false" onAction="#changeAdditionalInfo"
                                  text="我是企业用户" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </CheckBox>
                        <TextField fx:id="usernameField" promptText="只能使用汉字、英文字母和数字" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextField>
                        <PasswordField fx:id="passwordField" promptText="不少于6个字符，不超过20个字符" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </PasswordField>
                        <PasswordField fx:id="confirmPswField" promptText="再输入一遍密码" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                        </PasswordField>
                        <TextField fx:id="phoneContactField" promptText="您的手机号码（11位）" GridPane.columnIndex="1"
                                   GridPane.rowIndex="4">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <DatePicker fx:id="birthdayPicker" prefHeight="36.0" prefWidth="313.0" promptText="点击右边按钮选择您的生日"
                                    GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        <ImageView fx:id="cancelIconImage" fitHeight="47.0" fitWidth="47.0"
                                   onMouseEntered="#mouseEnterCancel" onMouseExited="#mouseExitCancel"
                                   onMousePressed="#mousePressCancel" onMouseReleased="#mouseReleaseCancel"
                                   pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="8">
                            <image>
                                <Image url="file:client/src/main/res/apply/cancelicon.png"/>
                            </image>
                        </ImageView>
                        <TextField fx:id="enterpriseNameField" promptText="您所在企业的中文名称" visible="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets left="10.0" right="10.0"/>
                            </GridPane.margin>
                        </TextField>
                    </children>
                </GridPane>
            </children>
        </Pane>
    </right>

</BorderPane>
