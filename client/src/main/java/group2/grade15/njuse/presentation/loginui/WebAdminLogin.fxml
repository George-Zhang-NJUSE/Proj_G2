<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-image: url(file:client/src/main/res/login/loginback.jpg); -fx-background-size: contain;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group2.grade15.njuse.presentation.loginui.WebAdminLoginController">

    <right>
        <VBox prefHeight="600.0" prefWidth="220.0" style="-fx-background-color: black; -fx-opacity: 0.6;">
            <children>

                <Label text="账号" textFill="WHITE">
                    <VBox.margin>
                        <Insets left="10.0" top="200.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>

                <TextField fx:id="accoutField" prefHeight="30.0" prefWidth="130.0"
                           style="-fx-background-color: WHITE; -fx-background-radius: 0;">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>

                <Label text="密码" textFill="WHITE">
                    <VBox.margin>
                        <Insets left="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>

                <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="130.0"
                               style="-fx-background-color: WHITE; -fx-background-radius: 0;">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </PasswordField>

                <Label onMouseEntered="#mouseInLogin" onMouseExited="#mouseExitLogin" onMousePressed="#mousePressLogin"
                       onMouseReleased="#mouseReleaseLogin">
                    <graphic>
                        <ImageView fx:id="loginIconImage" fitHeight="44.0" fitWidth="113.0" scaleX="0.9" scaleY="0.9"
                                   smooth="true">
                            <image>
                                <Image url="file:client/src/main/res/login/login.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets left="5.0" top="10.0"/>
                    </VBox.margin>
                </Label>
            </children>

        </VBox>
    </right>

</BorderPane>
